#!/bin/bash

CURL='curl --fail --show-error -ksLX'
CURL_OPTS=${CURL_OPTS:-""}

DEBUG=${DEBUG:-1}

[[ $DEBUG == 1 ]] && \
  {
    set -o xtrace
    CURL_OPTS+="-vvv"
  }

set -o errexit
set -o nounset
set -o pipefail

DATA=$(cat <<JSON
{
  "name": "${CLUSTER_NAME}",
  "provider": {
    "name": "ssh",
    "k8s_version": "${K8S_VERSION}",
    "ssh": {
      "control_plane_nodes": [
        {
          "username": "${SSH_USERNAME}",
          "host": "${CONTROL_PLANE_PRIVATE_IP}",
          "port": ${SSH_PORT},
          "password": "${SSH_PASSWORD}",
          "labels": [
            {
              "name": "pipeline-test",
              "value": "true"
            }
          ],
          "publichost": "${CONTROL_PLANE_PUBLIC_IP}"
        }
      ],
      "worker_nodes": [
        {
          "username": "${SSH_USERNAME}",
          "host": "${WORKER01_PRIVATE_IP}",
          "port": ${SSH_PORT},
          "password": "${SSH_PASSWORD}",
          "labels": [
            {
              "name": "pipeline-test",
              "value": "true"
            }
          ],
          "publichost": "${WORKER01_PUBLIC_IP}"
        }
      ],
      "api_endpoint": ""
    },
    "high_availability": true,
    "network_fabric": ""
  },
  "callback": {
    "url": "${CMA_CALLBACK_URL}",
    "request_id": "${CMA_CALLBACK_REQUESTID}"
  }
}
JSON
)

main()
{
  # shellcheck disable=SC2086
  $CURL POST \
    "${CLUSTER_API}/api/v1/cluster" \
    -H 'Cache-Control: no-cache' \
    -H 'Content-Type: application/json' \
    -d "${DATA}" $CURL_OPTS
}

main
